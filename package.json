{
    "nodemonConfig": {
        "exec": "cmake --build .build && ctest --test-dir .build --verbose",
        "ext": "cmake,csd,js,json,txt,orc,ts",
        "ignore": [
            ".git",
            "**/node_modules",
            "**/*.snaps"
        ],
        "verbose": true,
        "watch": [
            ".build/_deps/csoundtemplating-src",
            "combos",
            "instruments",
            "modules",
            "shared",
            "styles",
            "tests/modules",
            "CMakeLists.txt",
            "package.json"
        ]
    },
    "scripts": {
        "watch": "nodemon"
    },
    "devDependencies": {
        "nodemon": "3.0.2"
    }
}
