{
    "oscillator": {
        "wave": {
            "Saw": 1,
            "Square": 2
        }
    },
    "uiTypes": [{
        "type": "oscillator-component",
        "comment": "Oscillator component",
        "extends": "styled-group",
        "width": 150,
        "height": "100%",
        "channel-prefix": "(tryInherit('channel-prefix') ?? 'oscillator')",
        "layout": "TopToBottom",
        "row-height": "(tryInherit() ?? 27)",
        "row-label-padding": "(tryInherit() ?? 10)",
        "row-label-width": "(tryInherit() ?? '40%')",
        "row-value-width": "(tryInherit() ?? '60%')",
        "children": [{
            "type": "component-half-row-spacer"
        }, {
            "comment": "Oscillator 1",
            "type": "component-checkbox",
            "label": "Oscillator 1",
            "value-channel": "(inherit('channel-prefix') + '_enabled_1')",
            "value-default": true
        }, {
            "comment": "Wave 1",
            "type": "component-combobox",
            "label": "Wave",
            "value-items": "(Object.keys(global.json.oscillator.wave))",
            "value-channel": "(inherit('channel-prefix') + '_wave_1')"
        }, {
            "comment": "Pulse Width 1",
            "type": "component-number-box-slider",
            "label": "PW",
            "value-range": { "min": 0.01, "max": 0.5, "value": 0.5, "step": 0.01 },
            "value-channel": "(inherit('channel-prefix') + '_pulseWidth_1')"
        }, {
            "comment": "Fine 1",
            "type": "component-number-box-slider",
            "label": "Fine",
            "value-range": { "min": 0, "max": 50, "value": 0, "step": 1 },
            "value-channel": "(inherit('channel-prefix') + '_fine_1')"
        }, {
            "type": "component-full-row-spacer"
        }, {
            "comment": "Mix",
            "type": "component-number-box-slider",
            "label": "Mix",
            "value-range": { "min": 0, "max": 1, "value": 0.5, "step": 0.01 },
            "value-channel": "(inherit('channel-prefix') + '_mix')"
        }, {
            "comment": "Link",
            "type": "component-checkbox",
            "label": "Link",
            "value-channel": "(inherit('channel-prefix') + '_link')",
            "value-default": true
        }, {
            "type": "component-full-row-spacer"
        }, {
            "comment": "Oscillator 2",
            "type": "component-checkbox",
            "label": "Oscillator 2",
            "value-channel": "(inherit('channel-prefix') + '_enabled_2')",
            "value-default": false
        }, {
            "comment": "Wave 2",
            "type": "component-combobox",
            "label": "Wave",
            "value-items": "(Object.keys(global.json.oscillator.wave))",
            "value-channel": "(inherit('channel-prefix') + '_wave_2')"
        }, {
            "comment": "Pulse Width 2",
            "type": "component-number-box-slider",
            "label": "PW",
            "value-range": { "min": 0.01, "max": 0.5, "value": 0.5, "step": 0.01 },
            "value-channel": "(inherit('channel-prefix') + '_pulseWidth_2')"
        }, {
            "comment": "Semitone 2",
            "type": "component-number-box-slider",
            "label": "Semi",
            "value-range": { "min": 0, "max": 36, "value": 0, "step": 1 },
            "value-channel": "(inherit('channel-prefix') + '_semi_2')"
        }, {
            "comment": "Fine 2",
            "type": "component-number-box-slider",
            "label": "Fine",
            "value-range": { "min": -50, "max": 0, "value": 0, "step": 1 },
            "value-channel": "(inherit('channel-prefix') + '_fine_2')"
        }]
    }]
}
