{
    "uiTypes": [
        {
            "type": "combo-form",
            "extends": "form",
            "border": 1,
            "border-color": "(Constants.Color.Border)",
            "background": "black",
            "color": "white",
            "tab-height": 25,
            "tab-width": 80
        },
        {
            "type": "form-footer",
            "comment": "Form footer",
            "extends": "styled-group",
            "width": 480,
            "height": 25,
            "top": "(parent.height - this.json['height'])",
            "left": "(parent.width - this.json['width'])",
            "layout": "LeftToRight",
            "children": [
                {
                    "type": "styled-label",
                    "width": 142,
                    "height": "100%",
                    "text": "Polyphony: soft max"
                },
                {
                    "type": "styled-number-box-slider",
                    "width": 30,
                    "height": "100%",
                    "value-channel": "UI::PolyphonySoftMax",
                    "value-range": {
                        "min": 1,
                        "max": 100,
                        "step": 1,
                        "default": 10
                    }
                },
                {
                    "type": "styled-spacer",
                    "width": 10
                },
                {
                    "type": "styled-label",
                    "width": 68,
                    "height": "100%",
                    "text": "hard max"
                },
                {
                    "type": "styled-number-box-slider",
                    "width": 30,
                    "height": "100%",
                    "value-channel": "UI::PolyphonyHardMax",
                    "value-range": {
                        "min": 1,
                        "max": 100,
                        "step": 1,
                        "default": 20
                    }
                },
                {
                    "type": "styled-spacer",
                    "width": 40
                },
                {
                    "type": "styled-label",
                    "width": 50,
                    "height": "100%",
                    "text": "Show"
                },
                {
                    "type": "styled-combobox",
                    "width": 100,
                    "height": "100%",
                    "items": "(Object.keys(Constants.UI.ModVisibility))",
                    "channel": "UI::ModVisibility",
                    "preset-ignore": true
                }
            ]
        },
        {
            "type": "main-tab",
            "extends": "styled-tab-child",
            "comment": "(`${json['label']} tab`)",
            "width": "100%",
            "height": "100%",
            "layout": "TopToBottom",
            "tab": {
                "type": "styled-tab",
                "text": "(inherit('label'))",
                "width": "(inherit('tab-width'))",
                "height": "(inherit('tab-height'))"
            }
        },
        {
            "type": "presets",
            "comment": "Presets",
            "extends": "styled-group",
            "left": "(parent.width - 260)",
            "right": "100%",
            "height": "(inherit('tab-height'))",
            "layout": "LeftToRight",
            "children": [
                {
                    "type": "styled-label",
                    "width": 50,
                    "height": "100%",
                    "text": "Presets"
                },
                {
                    "type": "styled-spacer",
                    "width": 10
                },
                {
                    "type": "styled-preset-delete-button",
                    "width": 50,
                    "height": "100%",
                    "text": "Delete",
                    "snapsFileName": "(`${projectRootDir}/${fileName}.snaps`)"
                },
                {
                    "type": "styled-preset-combobox",
                    "width": 100,
                    "height": "100%",
                    "align": "right",
                    "snapsFileName": "(`${projectRootDir}/${fileName}.snaps`)"
                },
                {
                    "type": "styled-preset-save-button",
                    "width": 50,
                    "height": "100%",
                    "text": "Save",
                    "snapsFileName": "(`${projectRootDir}/${fileName}.snaps`)"
                }
            ]
        }
    ]
}
